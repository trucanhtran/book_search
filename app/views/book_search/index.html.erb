<div class="left-content">
  <div id="id_categories">
    <h3>Category</h3>
    <div id="id_list_categories">
      <% @categories.each do |category| %>
          <%=link_to category.name, category_products_path(category.id), remote: true %>
        <br/>
      <% end %>
    </div>
  </div>
</div>
<div class="right-content">
  <div id="id_search_bar">
    <input type="text" placeholder="Enter Keyword" name="keyword" id="id_search">
    <div id="id_search_content"></div>
  </div>
  <div id="id_products_list">
    <%= render partial: 'index', locals: { products: @products} %>
  </div>
</div>
